			"request": {
				"method": "DELETE",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/cart/{{user_id}}/items/5",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"cart",
						"{{user_id}}",
						"items",
						"5"
					]
				},
				"description": "Remove Product ID 5 from cart"
			},
			"response": []
		},
		{
			"name": "11. Get Final Cart State",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{base_url}}/api/cart/{{user_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"cart",
						"{{user_id}}"
					]
				},
				"description": "Get final cart state after removing item"
			},
			"response": []
		},
