				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"productId\": 6,\n  \"quantity\": 1\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/cart/user-{{$randomInt}}/items",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"cart",
						"user-{{$randomInt}}",
						"items"
					]
				},
				"description": "Test with random user ID to simulate multiple users"
			},
			"response": []
