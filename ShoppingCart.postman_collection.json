			"request": {
				"method": "PATCH",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"quantity\": 10\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/cart/{{user_id}}/items/1",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"cart",
						"{{user_id}}",
						"items",
						"1"
					]
				},
				"description": "Update quantity of Product ID 1 to 10"
			},
			"response": []
		},
		{
			"name": "9. Get Cart After Update",
			"request": {
				"method": "GET",
