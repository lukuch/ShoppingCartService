	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set random user ID if not already set",
					"if (!pm.environment.get('user_id')) {",
					"    pm.environment.set('user_id', 'user-' + Math.floor(Math.random() * 1000));",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5078",
			"type": "string"
		},
		{
			"key": "user_id",
			"value": "user-123",
			"type": "string"
		}
	]
}
